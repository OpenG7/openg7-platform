{
  "version": 8,
  "name": "OpenG7 Dark",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sprite": "https://demotiles.maplibre.org/styles/osm-bright/sprite",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://demotiles.maplibre.org/tiles/tiles.json"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#0b1220"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#0f172a",
        "fill-opacity": 0.9
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": "#111827",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#0b4b5a",
        "fill-opacity": 0.9
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#0b5f70",
        "line-width": 1.1
      }
    },
    {
      "id": "boundary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "paint": {
        "line-color": "#334155",
        "line-width": 1
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "paint": {
        "line-color": "#334155",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5,
          0.4,
          12,
          1.3,
          16,
          2.8
        ]
      }
    },
    {
      "id": "road-casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "paint": {
        "line-color": "#1f2937",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5,
          0.8,
          12,
          2.2,
          16,
          4
        ],
        "line-opacity": 0.6
      }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#111827",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "layout": {
        "text-field": ["get", "name:latin"],
        "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          3,
          10,
          7,
          14,
          12,
          18
        ]
      },
      "paint": {
        "text-color": "#e2e8f0",
        "text-halo-color": "#0b1220",
        "text-halo-width": 1
      }
    }
  ]
}
