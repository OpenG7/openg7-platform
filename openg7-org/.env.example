# Front Angular - runtime configuration (SSR + browser)
# Copy to `.env` or load these variables via your shell/direnv.

# CMS connection
API_URL=http://localhost:1337
API_WITH_CREDENTIALS=true
API_TOKEN=og7_frontend_readonly_token
HOMEPAGE_PREVIEW_TOKEN=preview-token

# Internationalization
I18N_PREFIX=/assets/i18n/

# Authentication & features
AUTH_MODE=hybrid
FEATURE_FLAGS={"homeFeedMocks":true,"homeCorridorsRealtimeMocks":true}

# Optional integrations
NOTIFICATION_WEBHOOK_URL=
ANALYTICS_ENDPOINT=

# Content Security Policy (JSON)
# CONTENT_SECURITY_POLICY={"scriptSrc":["'self'"],"styleSrc":["'self'"],"imgSrc":["'self'"],"fontSrc":["'self'"],"connectSrc":["'self'"]}

# SSR server (used by `npm run serve:ssr` or Node hosting)
PORT=4000
